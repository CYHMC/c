#include<stdio.h>
#include<string.h>
typedef struct
{
    int id;
    char name[20];
    int condition;
} BOOK;
BOOK book[20];
int main()
{
    int i;
    for(i=0;; i++)
    {
        book[0].condition=0;
        book[0].id=0;
        book[0].name==NULL;
        int a;
        printf("1.查询书籍\n");
        printf("2.注册书籍\n");
        printf("3.删除书籍\n");
        printf("4.退出\n");
        printf("请选择你想要执行的操作:\n");
        scanf("%d",&a);
        if(a==1)
        {   int j;
            int y;
            int h;
            for(j=0;; j++)
            {
                for(h=0; h<20; h++)
                {
                    if(book[h].id!=0)
                        printf("编号:%d\n书名:%s\n库存:%d\n",book[h].id,book[h].name,book[h].condition);
                    else
                        continue;
                }
                printf("你是否要返回管理界面:1.是 2.否");
                scanf("%d",&y);
                if(y==1)
                    break;
            }
        }
        else if(a==2)
        {
            int f;
            for(f=0;; f++)
            {
                int i;
                int y;
                for(i=0; i<50; i++)
                {
                    printf("请输入编号:\n");
                    scanf("%d",&book[i].id);
                    printf("请输入书名:\n");
                    scanf("%s",book[i].name);
                    printf("请输入库存量:\n");
                    scanf("%d",&book[i].condition);
                    printf("你是否要返回管理界面:1.是 2.否");
                    scanf("%d",&y);
                    if(y==1)
                        break;
                }
                if(y==1)
                    break;
            }
        }
        else if(a==3)
        {   int g;
            for(g=0;; g++)
            {
                int s;
                printf("请输入你要删除的书籍编号:\n");
                scanf("%d",&s);
                int i;
                int y;
                for(i=0; i<20; i++)
                {
                    if(s==book[i].id)
                    {
                        book[i].condition=0;
                        book[i].id=0;
                        book[i].name==NULL;
                        printf("书籍已删除。");
                    }
                }
                printf("你是否要返回管理界面:1.是 2.否");
                scanf("%d",&y);
                if(y==1)
                    break;
            }
        }
        else if(a==4)
        {
            printf("欢迎再次光临!");
            break;
        }
        else
            printf("抱歉，操作错误！");
    }
}


int search(struct book b[])
{
    int booknum,q;
    for(;;)
                {
				printf("请输入你所要查找的图书编号：\n");
					scanf_s("%d", &booknum);
				if (booknum < 0 || booknum>20)
				{
					printf("error!");
				}
				else
					for(q=0;q<20;q++)
					{
						if(q==booknum)
						printf("编号：  书名：  状态：  ");
						printf("%4d%4d%4d",b[q].num,b[q].name,b[q].condition);
						return q;
						break; 
					}	
					break;
				
}


void borrow(struct student a,struct book b[])
{
	int i,num;
	char judge;
	switch(a.condition)
	{
		case 2:
			printf("您的借阅数目已达上限！");
				break;
		case 1:
		case 2:
		{
			for (i=a.condition;i<3;)
			{
            search(b[]);
            num=search(b[]);
			printf("您要借这本书吗？\n");
			printf("输入“y”借阅\n");
			scanf_s("%c",&judge);
			if (judge=='y'&&b[num].condition==1)
            {
                printf("借阅成功！");
                b[num].condition=0;
                a.condition++;
                i++;
            }
            else
            {
                printf("不成功！");
			}
		}
		}
		break;
		default :
			printf("error!");
	}
			printf("再见！");
}
void ret(struct student a,struct book b[])
{
    int j,num;
    char judge;
    switch(a.condition)
    {
    case 0:
        printf("您还没有借过书哦！");
        break;
    case 1:
    case 2:
        {
           for(j=a.condition;j>=0;)
           {
               search(b);
               num=search(b[]);
               printf("您要还这本书吗？");
               printf("输入“y”还");
               scanf_s("%c",&judge);
               if(judge='y'&&b[num].condition==0)
               {
                   printf("成功！");
                   j--;
                   b[num].condition=1;
                   a.condition--;
               }
               else
               {
                   printf("不成功！");
               }
           }
        }
    default :
        printf("error!");
        break;
    }
    printf("再见！");

}
