#include<stdio.h>
#include<string.h>
typedef struct
{
    int id;
    char name[20];
    int condition;
} BOOK;
BOOK book[20];
int main()
{
    int i;
    for(i=0;; i++)
    {
        book[0].condition=0;
        book[0].id=0;
        book[0].name==NULL;
        int a;
        printf("1.查询书籍\n");
        printf("2.注册书籍\n");
        printf("3.删除书籍\n");
        printf("4.退出\n");
        printf("请选择你想要执行的操作:\n");
        scanf("%d",&a);
        if(a==1)
        {   int j;
            int y;
            int h;
            for(j=0;; j++)
            {
                for(h=0; h<20; h++)
                {
                    if(book[h].id!=0)
                        printf("编号:%d\n书名:%s\n库存:%d\n",book[h].id,book[h].name,book[h].condition);
                    else
                        continue;
                }
                printf("你是否要返回管理界面:1.是 2.否");
                scanf("%d",&y);
                if(y==1)
                    break;
            }
        }
        else if(a==2)
        {
            int f;
            for(f=0;; f++)
            {
                int i;
                int y;
                for(i=0; i<50; i++)
                {
                    printf("请输入编号:\n");
                    scanf("%d",&book[i].id);
                    printf("请输入书名:\n");
                    scanf("%s",book[i].name);
                    printf("请输入库存量:\n");
                    scanf("%d",&book[i].condition);
                    printf("你是否要返回管理界面:1.是 2.否");
                    scanf("%d",&y);
                    if(y==1)
                        break;
                }
                if(y==1)
                    break;
            }
        }
        else if(a==3)
        {   int g;
            for(g=0;; g++)
            {
                int s;
                printf("请输入你要删除的书籍编号:\n");
                scanf("%d",&s);
                int i;
                int y;
                for(i=0; i<20; i++)
                {
                    if(s==book[i].id)
                    {
                        book[i].condition=0;
                        book[i].id=0;
                        book[i].name==NULL;
                        printf("书籍已删除。");
                    }
                }
                printf("你是否要返回管理界面:1.是 2.否");
                scanf("%d",&y);
                if(y==1)
                    break;
            }
        }
        else if(a==4)
        {
            printf("欢迎再次光临!");
            break;
        }
        else
            printf("抱歉，操作错误！");
    }
}
